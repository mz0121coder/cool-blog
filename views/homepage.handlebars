<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
  <div class='row mb-4 post'>
    <div class='col-md-5'>
      <h2>
        <a href='/posts/{{post.id}}'>{{post.title}}</a>
      </h2>
      <p>Posted by:
        {{user.userName}}
        on
        {{format_date post.date_created}}</p>
    </div>
  </div>
{{/each}}